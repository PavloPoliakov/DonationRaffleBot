  },
  "dependencies": {
    "better-sqlite3": "^9.4.5",
    "dotenv": "^16.4.5",
    "fastify": "^5.7.4",
    "grammy": "^1.23.1",
    "knex": "^3.1.0",
    "pg": "^8.11.5"
  },
  "devDependencies": {
    "vitest": "^4.0.18",
    "wait-on": "^7.2.0"
  }
}
